<% starjob = "starjob.png"%>
<% emptyjob = "emptyjob.png"%>



<head><link href="https://fonts.googleapis.com/css?family=Abel|Teko&display=swap" rel="stylesheet">
<body class="hero_background" style= "background-image: url(<%= @hero.background %>);">
  <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>

  <div class="info_border">
        <div class="hero-name">
            <h1><%= @hero.name %></h1>
        </div>

        <div class="role-zone">
            <h3 class="hero-role">Hero Role:</h3> 
            <h4 class="hero-type"><%= @hero.role.hero_role %></h4>
        </div>

        <div class="difficulty-block">
            <h4>Difficulty:</h4>
            <% empty = 3 - @hero.stat.difficulty %>
            <% @hero.stat.difficulty.times do %>
                <img src="<%= asset_path(starjob) %>" alt="Difficulty Raiting">
            <%end%>
            <% empty.times do %>
                <img src="<%= asset_path(emptyjob) %>" alt="Difficulty Raiting">
            <%end%>
        </div>
        
        <div class="bio">
            <h5>Real Name:</h5>
            <h5>Age: <%= @hero.stat.age %></h5>
            <h5>Description: <%= @hero.stat.description %></h5>
            <h5>Affiliation: <%= @hero.stat.affiliation %></h5>
            <h5>Base of Operation: <%= @hero.stat.base_of_operations %></h5>
        </div>

        <div class="stat-values">
            <p>Health: <%= @hero.stat.health %></p>
            <p>Armour: <%= @hero.stat.armour %></p>
            <p>Shield: <%= @hero.stat.shield %></p>
        </div>
    </div>

  <%= form_for @game do |f| %>
  <%= f.collection_select :id, Platform.all, :id, :platform_type %>
  <%= f.collection_select :id, Rank.all, :id, :rank %>
  <%= f.collection_select :id, Map.all, :id, :name %>
  <%= f.select "eliminations", options_for_select(["Win Rate", "Time on Fire"]) %>
<% end %>


<%= bar_chart({"Time on Fire" => @game.time_on_fire, 
               "Win Rate" => @hero.win_rate}) %> 
</body>
